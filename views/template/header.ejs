<html>
<head>

	<!-- Standard Meta -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<!-- Site Properties -->
	<title>Treelo...</title>


	<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css" integrity="sha256-9mbkOfVho3ZPXfM7W8sV2SndrGDuh7wuyLjtsWeTI1Q=" crossorigin="anonymous" />
	
	<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js" integrity="sha256-t8GepnyPmw9t+foMh3mKNvcorqNHamSKtKRxxpUEgFI=" crossorigin="anonymous"></script>

	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/paper.js/0.9.25/paper-full.js"></script>
	
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/howler/1.1.28/howler.js"></script>

	<link rel="stylesheet" type="text/css" href="/styleSheets/treelo.css">

	<link rel="stylesheet" type="text/css" href="/styleSheets/colorGame.css">

	<link rel="stylesheet" type="text/css" href="/stylesheets/patatap.css">

</head>
<body>

	<div class="ui inverted segment">
	  	<div class="ui inverted secondary menu">
	  		<a id="nav-bar" href="#"></a>
		    <a class="item" href="/"><i class="home icon"></i>
		      Home
		    </a>
		    <a class="item" href="/myBoard"><i class="clipboard list icon"></i>
		      Board
		    </a>
		    <a id="gamePage" class="item" href="/myGames"><i class="xbox icon"></i>
		      Games
		    </a>
		    
			<div class="right menu">
			  <% if(Cookie) { %>
			    <a class="item" href="/userProfile"><i class="user circle icon"></i>
			    <%= User.name %>
			    </a>
			    <a class="item" href="/logout"><i class="sign-out icon"></i>
			    Logout
			    </a>
			  <% } else { %>
			    <a class="item" href="/login"><i class="sign-in icon"></i>
			    Login
			    </a>
			    <a class="item" href="/register"><i class="user plus icon"></i>
			    Sign-up
			    </a>
			  <% } %>
	  			<a id="nav-bar" href="#"></a>
			</div>
		</div>
	</div>
	
<!-- <div><img id="backGroundImage" class="fluid" src="https://i.pinimg.com/originals/3d/bc/4e/3dbc4edbefcd20cf83f9a37401e50a8f.jpg"></div> -->

<div id="flashMessage" class="text center aligned container">
	<% if(error && error.length>0) { %>
		<p class="ui brown message"><%= error %></p>
	<% } %>
	<% if(success && success.length>0) { %>
		<p class="ui black message"><%= success %></p>
	<% } %>
</div>